<% for (let post of posts) { %>
<div class="post">
	<div class="info">
		<p class="date"><%= post.date %></p>
		<p class="views"><%= post.views || '0' %> views</p>
	</div>
	<p class="title" contenteditable="true"><%= post.title %></p>
	<div class="bottom">
		<div class="tags" contenteditable="true">
			<%- post.tags.map(el => `<a href="#" class="tag">${el}</a>`).join('\n') %>
		</div>
		<div class="icons">
			<img src="assets/delete.png" class="admin-delete">
			<%- post.content ? '<img src="assets/content.png">' : '' %>
		</div>
	</div>
</div>
<% } %>