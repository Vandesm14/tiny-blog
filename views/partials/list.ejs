<%% for (let post of posts) { %>
	<div class="post<%%= post.unlist ? ' unlisted' : '' %>">
		<div class="info">
			<p class="date"><%%= new Date(post.date).toLocaleString() %></p>
			<% if (admin) { %>
			<p class="views"><%%= post.views && post.views.toLocaleString() || '0' %> views</p>
			<% } %>
		</div>
		<% if (admin) { %>
		<p class="title admin-control" contenteditable="true"><%%= post.title %></p>
		<% } else { %>
		<p class="title"><%%= post.title %></p>
		<% } %>
		<div class="bottom">
	
			<% if (admin) { %>
				
			<div class="tags admin-control" contenteditable="true" spellcheck="false">
				<%%- post.tags && post.tags.map(el => `<a href="#" class="tag">${el}</a>`).join('\n') %>
			</div>
			<div class="icons">
				<img src="assets/delete.png" class="admin-delete admin-control">
				<img src="assets/unlist.png" class="admin-unlist admin-control">
				<%%- post.hasContent ? '<img src="assets/content.png">' : '' %>
			</div>
	
			<% } else { %>
	
			<div class="tags">
				<%%- post.tags && post.tags.map(el => `<a href="#" class="tag">${el}</a>`).join('\n') %>
			</div>
			<div class="icons">
				<%%- post.hasContent && '<img src="assets/content.png">' %>
			</div>
	
			<% } %>
		</div>
	</div>
	<%% } %>